<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd
                        http://www.springframework.org/schema/util
						http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<bean id="api2CallerFactory" class="org.simple4j.wsclient.caller.FreeMarkerJSONCallerFactory">
		<property name="httpWSClient" ref="httpWSClient"></property>
		<property name="jSONConfig">
			<value>
				<![CDATA[
{
	"freemarkerEncoding":"UTF-8",
	"freemarkerVersion":"2.3.23",
    "request": {
        "method": "POST",
        "urlPattern": "/system1/api2.json",
        "body": "{\"outer\" : {\"param1\" : \"${PARAM1}\"}}",
        "staticHeaders": {
            "Content-Type": "application/JSON"
        },
        "headers": {
        "callerId":"${callerId}",
        "userId":"${userId}",
        "header1": "${header1}"
        }
    },
    "response": {
        "responseBodyToCustomFieldMapping": {
        }
    }
}
				]]>
			</value>
		</property>
		<property name="responseBodyParsers">
			<map>
				<entry key="(200)|(208)" value-ref="jsonBodyParser"></entry>
			</map>
		</property>
	</bean>

	<bean id="mandatoryFieldsPostCallerFactory" class="org.simple4j.wsclient.caller.FreeMarkerJSONCallerFactory">
		<property name="httpWSClient" ref="httpWSClient"></property>
		<property name="jSONConfig">
			<value>
				<![CDATA[
{
	"freemarkerEncoding":"UTF-8",
	"freemarkerVersion":"2.3.23",
    "request": {
        "method": "POST",
        "urlPattern": "/eventdistributorws/eppublic/V1/event.json",
        "body": "{\"businessRecordId\" : \"${businessRecordId}\",\"businessRecordType\" : \"${businessRecordType}\",\"source\" : \"${source}\"}",
        "staticHeaders": {
            "Content-Type": "application/JSON"
        },
        "headers": {
        "callerId":"${callerId}",
        "userId":"${userId}"
        }
    },
    "response": {
        "responseBodyToCustomFieldMapping": {
        }
    }
}
				]]>
			</value>
		</property>
		<property name="responseBodyParsers">
			<map>
				<entry key="(200)|(208)|(403)|(404)" value-ref="jsonBodyParser"></entry>
			</map>
		</property>
	</bean>

	<bean id="noFieldsPostCallerFactory" class="org.simple4j.wsclient.caller.FreeMarkerJSONCallerFactory">
		<property name="httpWSClient" ref="httpWSClient"></property>
		<property name="jSONConfig">
			<value>
				<![CDATA[
{
	"freemarkerEncoding":"UTF-8",
	"freemarkerVersion":"2.3.23",
    "request": {
        "method": "POST",
        "urlPattern": "/eventdistributorws/eppublic/V1/event.json",
        "body": "{}",
        "staticHeaders": {
            "Content-Type": "application/JSON"
        },
        "headers": {
        "userId":"${userId!}"
        }
    },
    "response": {
        "responseBodyToCustomFieldMapping": {
        }
    }
}
				]]>
			</value>
		</property>
		<property name="responseBodyParsers">
			<map>
				<entry key="(200)|(208)" value-ref="jsonBodyParser"></entry>
			</map>
		</property>
	</bean>

</beans>